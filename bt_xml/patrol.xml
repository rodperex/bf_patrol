<?xml version="1.0"?>
<root main_tree_to_execute="BehaviorTree" BTCPP_format="4">
    <!-- ////////// -->
    <BehaviorTree ID="BehaviorTree">
        <Inverter>
            <KeepRunningUntilFailure>
                <ReactiveSequence>
                    <Fallback>
                        <Action ID="BatteryChecker"/>
                        <Sequence>
                            <Action ID="GetWaypoint" waypoint="{efbb_wp}" wp_id="recharge"/>
                            <Action ID="Move" goal="{efbb_wp}"/>
                            <Action ID="Recharge"/>
                        </Sequence>
                    </Fallback>
                    <Sequence>
                        <Action ID="GetWaypoint" waypoint="{efbb_wp}" wp_id="next"/>
                        <Action ID="Move" goal="{efbb_wp}"/>
                        <Action ID="Patrol"/>
                    </Sequence>
                </ReactiveSequence>
            </KeepRunningUntilFailure>
        </Inverter>
    </BehaviorTree>
    <!-- ////////// -->
    <TreeNodesModel>
        <Action ID="BatteryChecker"/>
        <Action ID="GetWaypoint">
            <output_port name="waypoint"/>
            <input_port name="wp_id"/>
        </Action>
        <Action ID="Move">
            <input_port name="goal"/>
        </Action>
        <Action ID="Patrol"/>
        <Action ID="Recharge"/>
        <Action ID="TrackObjects"/>
    </TreeNodesModel>
    <!-- ////////// -->
</root>
